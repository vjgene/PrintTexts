<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">

    <TextView android:text="Enter Email"
         android:id="@+id/txnlabel"
         android:layout_width="wrap_content"
         android:layout_height="30px"
         android:layout_weight="1"
         android:layout_gravity="center_horizontal"
         android:textSize="20sp"
         android:typeface="serif"
         android:textStyle="bold"
         />
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_weight="1"
>

<TableRow>
<TextView
android:layout_width="0px"
android:layout_height="wrap_content"
android:id="@+id/itemlabel"
android:text="Email"
android:textSize="14sp"
         android:typeface="serif"
         android:textStyle="bold"
         android:layout_weight="1"
/>

<EditText android:id ="@+id/email"
 android:layout_width="0px"
 android:layout_height="wrap_content"
 android:layout_weight="1"
/>
</TableRow>

<!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">-->


    <Button android:id="@+id/SaveTransaction"
    android:layout_width="0px"
    android:layout_height="wrap_content"
    android:text="Save"
    android:textSize="14sp"
         android:typeface="serif"
         android:textStyle="bold"
         android:layout_weight="1"
    />
    
</TableLayout>
</LinearLayout>